---
title: Project Title
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="Reuben Son: software developer, sound artist, and ceramist">
    <meta name="keywords" content="reuben son, nyc, software engineer, private chronology, electronic music, ceramics">
    <link rel="stylesheet" href="/bundle.css">
    <link rel="icon" type="image/png" href="/favicon.png">
    {% include "open-font.njk" %}
    {% include "broider.njk" %}
  </head>
  <body class="project {{ layoutType }}">
    {% include "toc-button.njk" %}
    {% include "table-of-contents.njk" %}
    <div class="top-spacer"></div>
    <div class="content">
      <header>
        <h1>{{ title }}</h1>
        <a href="{{ url }}">{{url}}</a>
      </header>
      <div class="content-wrapper">
        {{ content | safe }}
      </div>

      {% if not hideSeeMore %}
      <section class="project-more">
        <h2>See also</h2>
        <ul>
          {% for project in projects %}
            {% if project.title == title %}
              {% for relatedProjectId in project.relatedProjects %}
                <li class="related-project">
                  {% for project in projects %}
                    {% if project.id == relatedProjectId %}
                      <a href="{{ project.path }}">{{ project.title }}</a>
                    {% endif %}
                  {% endfor %}
                </li>
              {% endfor %}
            {% endif %}
          {% endfor %}
          {# <li class="related-project all-projects-link">
            <a href="/projects">Selected Projects</a>
          </li> #}
        </ul>
      </section>
      {% endif %}
    </div>
    <div class="project-border broider"></div>
  </body>
</html>